<% if @error %>
    alert("<%=@error%>");
<% else %>
$(".comment-panel .comments").append("<%= j render :partial => "comment/single_comment", :locals => {:comment =>@comment} %>");
$("#comment-form-<%= @comment.commentable_type%>-<%= @comment.commentable_id %>  #body").val('');
new PNotify({
    text: 'نظر شما ثبت شد!',
    type: 'warning',
    styling: 'fontawesome',
    icon: false
    <% if I18n.locale.to_s == 'fa' %>, addclass: 'text-fa'
    <%end %>
});
<% end %>