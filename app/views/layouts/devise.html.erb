<!DOCTYPE html>
<html>

<head>
  <title>ACM</title>
	<%= favicon_link_tag '/favicon.ico' %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body class="devise">

<%= yield %>

</body>
<script language="javascript" type="text/javascript">
    $(function () {
        <% if notice %>
        new PNotify({
            text: '<%= notice %>',
            type: 'warning',
            styling: 'fontawesome',
            icon: false
            <% if I18n.locale.to_s == 'fa' %>, addclass: 'text-fa'
            <%end %>
        });
        <% end %>
        <% if alert %>
        new PNotify({
            text: '<%= alert %>',
            type: 'danger',
            styling: 'fontawesome',
            icon: false
            <% if I18n.locale.to_s == 'fa' %>, addclass: 'text-fa'
            <%end %>
        });
        <% end %>
    });
</script>
</html>
