<div class="container form-page">
  <div class="col-lg-8 col-lg-offset-2">
    <%= form_for(@blog, html: {class: 'form-horizontal'}) do |f| %>
        <% if @blog.errors.any? %>
            <% @blog.errors.full_messages.each do |message| %>
                <div class="alert alert-danger">
                  <%= message %>
                </div>
            <% end %>
        <% end %>
        <div class="form-group">
          <%= f.label :name, :class => 'control-label col-sm-3' %>
          <div class="col-sm-9">
            <%= f.text_field :name, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :desc, :class => 'control-label col-sm-3' %>
          <div class="col-sm-9">
            <%= f.text_field :desc, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-9 col-sm-offset-3">
            <%= f.submit :class => "btn btn-primary text-#{I18n.locale.to_s}" %>
            <a href="/" class="btn btn-default"><%= t 'cancel' %></a>
          </div>
        </div>
    <% end %>
  </div>
</div>
