<%= bootstrap_form_for(@post, html: {class: "text-#{I18n.locale.to_s}"}, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10') do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |message| %>
            <div class="alert alert-danger">
              <%= message %>
            </div>
        <% end %>
    <% end %>

    <%= f.text_field :title %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
    <%= f.text_field :image_url %>
    <div class="form-group">
      <label class="control-label col-sm-2" for="post_summary">Summary</label>

      <div class="col-sm-10">
        <%= f.cktext_area :summary, :class => 'ckeditor', :ckeditor => {:language => 'fa', :toolbar => 'mini'} %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="post_text">Text</label>

      <div class="col-sm-10">
        <%= f.cktext_area :text, :class => 'ckeditor', :ckeditor => {:language => 'fa'} %>
      </div>
    </div>

    <%= f.text_field :tags %>
    <%= f.datetime_select :publishDate %>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2 text-en">
        <%= f.submit :class => "btn btn-primary text-#{I18n.locale.to_s}" %>
        <%= link_to I18n.t('cancel'), posts_path, :class => "btn btn-default text-#{I18n.locale.to_s}" %>
        <%= link_to I18n.t('destroy'), posts_delete, :class => "btn btn-default text-#{I18n.locale.to_s}" %>
      </div>
    </div>


      <%= f.text_field :englishTitle %>
      <div class="form-group">
      <div class="col-sm-10">
        <label class="control-label col-sm-2" for="post_english_summary">English Summary</label>
        <%= f.cktext_area :englishSummary, :class => 'ckeditor', :ckeditor => {:language => 'fa', :toolbar => 'mini'} %>
      </div>
    </div>
      <div class="form-group">
      <label class="control-label col-sm-2" for="post_english_text">English Text</label>
      <div class="col-sm-10">
        <%= f.cktext_area :englishText, :class => 'ckeditor', :ckeditor => {:language => 'fa'} %>
      </div>
    </div>
<% end %>