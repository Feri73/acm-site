
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <div class="title ">
          <%= post.title %>
        </div>
        <div class="date">
          <%= post.publishDate.to_jalali.strftime("%d %B").persian_cleanup %> &middot; <%= post.category.name %>
        </div>
      </div>
      <div class="modal-body">
        <%= image_tag 'back2.jpg', alt: 'a face that is unnervingly happy'%>
      </div>
      <div class="modal-footer">
        <% if summary %>
            <%= raw post.summary %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="post">
  <div class="image-wrapper">
    <div class="post-image">
      <a  data-toggle="modal" data-target="#myModal">
        <%= image_tag 'back2.jpg', alt: 'a face that is unnervingly happy'%>
      </a>
    </div>
  </div>
  <div class="content-wrapper text-<%= I18n.locale.to_s %>">
    <div class="content-colorbar"></div>
    <div class="pad">
      <div class="title ">
        <%= post.title %>
      </div>
      <div class="date">
        <%= post.publishDate.to_jalali.strftime("%d %B").persian_cleanup %> &middot; <%= post.category.name %>
      </div>
    </div>
    <hr>
    <div class="pad">
      <div class="text">
        <% if summary %>
            <%= raw post.summary %>
        <% else %>
            <%= raw post.text %>
            <%= render :partial => 'comment/comment_box', :locals => {:commentable => post} %>
        <% end %>
      </div>
    </div>
    <div class="pad">
      <% if summary %>
          <div class="more">
            <%= link_to I18n.t('more'), post %>
          </div>
      <% end %>
      <div class="tags">
        <%= post.tags %>
      </div>
    </div>
  </div>
  <div class="like-wrapper">
      <%= render partial: 'like/vote_btn', :locals => {:votable => post} %>
  </div>



</div>